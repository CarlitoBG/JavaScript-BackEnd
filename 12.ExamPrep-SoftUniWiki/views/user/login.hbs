{{#if errorMessage}}
    <section id="notifications">
        <p>{{errorMessage}}</p>
    </section>
{{/if}}

<section>
    <h2>Login</h2>
    <div class="spacer">
        <form action="/user/login" method="POST">
            <label>Username:</label>
            <input name="username" type="text">
            <label>Password:</label>
            <input name="password" type="password">
            <input type="submit" value="Login">
        </form>
    </div>
</section>