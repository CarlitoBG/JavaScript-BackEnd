<form class="text-center border border-light p-5" action="" method="POST">
    <h1>Edit Course</h1>
    <div class="form-group">
        <label for="title">Course Title</label>
        {{#if oldInput}}
        <input type="text" class="form-control" placeholder="Course name" value="{{oldInput.title}}" name="title">
        {{else}}
        <input type="text" class="form-control" placeholder="Course name" value="{{course.title}}" name="title">
        {{/if}}
    </div>
    <div class="form-group">
        <label for="description">Course Description</label>
        {{#if oldInput}}
        <textarea class="form-control" placeholder="Description" name="description">{{oldInput.description}}</textarea>
        {{else}}
        <textarea class="form-control" placeholder="Description" name="description">{{course.description}}</textarea>
        {{/if}}
    </div>
    <div class="form-group">
        <label for="imageUrl">Image url</label>
        {{#if oldInput}}
        <input type="text" class="form-control" placeholder="Image Url" value="{{oldInput.imageUrl}}" name="imageUrl">
        {{else}}
        <input type="text" class="form-control" placeholder="Image Url" value="{{course.imageUrl}}" name="imageUrl">
        {{/if}}
    </div>
    <div class="form-check">
        {{#if oldInput}}
            {{#if isCoursePublic}}
            <input checked="checked" type="checkbox" class="form-check-input" id="check-box" name="isPublic">
            {{else}}
            <input type="checkbox" class="form-check-input" id="check-box" name="isPublic">
            {{/if}}
        {{else}}
            {{#if course.isPublic}}
            <input checked="checked" type="checkbox" class="form-check-input" id="check-box" name="isPublic">
            {{else}}
            <input type="checkbox" class="form-check-input" id="check-box" name="isPublic">
            {{/if}}
        {{/if}}
        <label class="form-check-label" for="check-box">Public</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>